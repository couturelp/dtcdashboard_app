# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# MongoDB — Application database
# Production: MongoDB Atlas on Northflank
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/dtcdashboard
# Local development (docker compose up -d):
MONGODB_URI=mongodb://localhost:27017/dtcdashboard

# PostgreSQL — Per-customer Fivetran databases
# Production: AWS RDS
# RDS_MASTER_HOST=your-rds-instance.region.rds.amazonaws.com
# Local development (docker compose up -d):
RDS_MASTER_HOST=localhost
RDS_MASTER_PORT=5432
RDS_MASTER_USER=postgres
RDS_MASTER_PASSWORD=postgres
RDS_SECURITY_GROUP_ID=sg-xxxxxxxxx

# AWS Credentials — For RDS monitoring and security group management
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# Authentication — JWT Secrets
JWT_SECRET=your-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-refresh-jwt-secret-min-32-chars

# Encryption — AES-256-GCM for tenant credential encryption
ENCRYPTION_KEY=your-64-char-hex-string-representing-32-bytes

# SendGrid — Email service
SENDGRID_API_KEY=your-sendgrid-api-key

# Stripe — Billing and payments
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Currency Conversion
CURRENCY_API_KEY=your-currency-api-key
