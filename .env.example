# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# MongoDB Atlas (hosted on Northflank) — Application database
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/dtcdashboard

# AWS RDS PostgreSQL — Per-customer Fivetran databases
RDS_MASTER_HOST=your-rds-instance.region.rds.amazonaws.com
RDS_MASTER_PORT=5432
RDS_MASTER_USER=postgres
RDS_MASTER_PASSWORD=your-password
RDS_SECURITY_GROUP_ID=sg-xxxxxxxxx

# AWS Credentials — For RDS monitoring and security group management
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# Authentication — JWT Secrets
JWT_SECRET=your-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-refresh-jwt-secret-min-32-chars

# SendGrid — Email service
SENDGRID_API_KEY=your-sendgrid-api-key

# Stripe — Billing and payments
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Currency Conversion
CURRENCY_API_KEY=your-currency-api-key
